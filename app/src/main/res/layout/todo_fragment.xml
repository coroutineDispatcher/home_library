<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/todo"
        android:layout_weight="100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.book.todo.BooksFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="10"
            app:cardElevation="8dp"
            android:id="@+id/rv_notes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:layout_editor_absoluteY="130dp" tools:layout_editor_absoluteX="0dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="225dp"
            android:elevation="16dp"
            android:id="@+id/fab_add_new_note"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.967"
            app:layout_constraintVertical_bias="0.982"/>


</androidx.constraintlayout.widget.ConstraintLayout>
